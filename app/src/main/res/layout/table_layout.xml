<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/padding_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_label"
            android:gravity="center"
            android:textColor="@color/color_5398F7"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_30"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_caozuo"
            android:gravity="center"
            android:textColor="@color/color_5398F7"
            android:text="操作"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_gravity="right"
            android:background="@drawable/shape_text"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_30"/>

    </RelativeLayout>



    <com.example.factorygeneral.view.LineGridView
        android:layout_marginTop="@dimen/padding_5"
        android:background="@drawable/shape_table"
        android:id="@+id/gv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <View
        android:layout_marginTop="@dimen/padding_20"
        android:background="@color/color_D0D0D0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"/>

</LinearLayout>