<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.factorygeneral.view.MyGridView
            android:numColumns="1"
            android:id="@+id/gv_textBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/padding_10"
            android:id="@+id/tv_caozuo"
            android:gravity="center"
            android:textColor="@color/color_5398F7"
            android:text="操作"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_text"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_30"/>

    </RelativeLayout>


    <com.example.factorygeneral.view.MyGridView
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_100"
        android:numColumns="5"
        android:id="@+id/gv_file"
        android:layout_width="600dp"
        android:layout_height="wrap_content"/>


    <View
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/color_D0D0D0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"/>


</LinearLayout>