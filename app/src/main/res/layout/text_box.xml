<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_caozuo"
        android:gravity="center"
        android:textColor="@color/color_5398F7"
        android:text="操作"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/padding_10"
        android:background="@drawable/shape_text"
        android:layout_width="@dimen/padding_60"
        android:layout_height="@dimen/padding_30"/>

    <com.example.factorygeneral.view.MyGridView
        android:numColumns="2"
        android:id="@+id/gv_textBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.factorygeneral.view.MyGridView
        android:layout_marginLeft="@dimen/padding_60"
        android:numColumns="8"
        android:id="@+id/gv_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <View
        android:layout_marginTop="@dimen/padding_20"
        android:background="@color/color_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"/>


</LinearLayout>