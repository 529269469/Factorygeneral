<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.factorygeneral.view.MyListView
            android:divider="@color/color_tran"
            android:id="@+id/lv_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">
            <TextView
                android:id="@+id/tv_file"
                android:layout_marginLeft="@dimen/padding_20"
                android:textColor="@color/color_5398F7"
                android:gravity="center"
                android:text="关联文件"
                android:background="@drawable/shape_text"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_36"/>

            <TextView
                android:id="@+id/tv_photo"
                android:layout_marginLeft="@dimen/padding_20"
                android:textColor="@color/color_5398F7"
                android:gravity="center"
                android:text="拍照"
                android:background="@drawable/shape_text"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"/>

            <TextView
                android:id="@+id/tv_video"
                android:layout_marginLeft="@dimen/padding_20"
                android:textColor="@color/color_5398F7"
                android:gravity="center"
                android:text="视频"
                android:background="@drawable/shape_text"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"/>

        </LinearLayout>

        <com.example.factorygeneral.view.MyGridView
            android:layout_margin="@dimen/padding_16"
            android:numColumns="5"
            android:id="@+id/gv_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_cancel"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:text="取消"
                android:background="@drawable/shape_text"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"/>

            <TextView
                android:id="@+id/tv_save"
                android:layout_marginLeft="@dimen/padding_60"
                android:textColor="@color/color_5398F7"
                android:gravity="center"
                android:text="保存"
                android:background="@drawable/shape_text"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"/>
        </LinearLayout>


    </LinearLayout>


</ScrollView>