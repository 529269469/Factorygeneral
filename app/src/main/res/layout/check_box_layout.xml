<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_caozuo"
            android:gravity="center"
            android:textColor="@color/color_5398F7"
            android:text="操作"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_gravity="right"
            android:background="@drawable/shape_text"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_30"/>

        <com.example.factorygeneral.view.MyGridView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_300"
            android:layout_toLeftOf="@id/tv_caozuo"
            android:numColumns="5"
            android:id="@+id/gv_text"
            android:layout_width="600dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_toLeftOf="@id/gv_text"
            android:layout_marginRight="@dimen/padding_10"
            android:textSize="@dimen/text_font_14"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.example.factorygeneral.view.MyGridView
        android:layout_marginRight="@dimen/padding_300"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/padding_5"
        android:numColumns="5"
        android:id="@+id/gv_file"
        android:layout_width="600dp"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/color_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"/>
</LinearLayout>