<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.main.HomeFragment">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40">


        <ImageView
            android:layout_marginRight="@dimen/padding_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:id="@+id/iv_up"
            android:src="@drawable/updata"
            android:layout_marginLeft="@dimen/padding_24"
            android:layout_width="@dimen/padding_20"
            android:layout_height="@dimen/padding_20"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_up"
            android:visibility="visible"
            android:id="@+id/iv_add"
            android:src="@drawable/add"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_width="@dimen/padding_20"
            android:layout_height="@dimen/padding_20"/>

        <com.google.android.material.tabs.TabLayout
            android:layout_toLeftOf="@id/iv_add"
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>