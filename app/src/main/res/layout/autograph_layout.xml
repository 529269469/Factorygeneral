<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:padding="@dimen/padding_1"
        android:id="@+id/ll_checkPerson"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_gray_square_bg"
            android:layout_marginRight="430dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_autograph"
            android:layout_width="266dp"
            android:layout_height="@dimen/padding_100" />

        <TextView
            android:layout_marginRight="@dimen/padding_10"
            android:layout_toLeftOf="@id/iv_autograph"
            android:id="@+id/tv_label"
            android:textColor="@color/color_333333"
            android:text="检查人签名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_caozuo"
            android:gravity="center"
            android:textColor="@color/color_5398F7"
            android:text="操作"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_gravity="right"
            android:background="@drawable/shape_text"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_30"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/padding_20"
        android:background="@color/color_D0D0D0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1"/>
</LinearLayout>