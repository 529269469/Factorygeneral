<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/padding_80"
    android:layout_height="@dimen/padding_90">

    <ImageView
        android:layout_marginTop="@dimen/padding_10"
        android:src="@drawable/abc"
        android:id="@+id/iv_grid"
        android:scaleType="fitXY"
        android:layout_width="@dimen/padding_80"
        android:layout_height="@dimen/padding_80" />
    <ImageView
        android:layout_marginTop="@dimen/padding_10"
        android:layout_centerInParent="true"
        android:src="@drawable/bofang"
        android:id="@+id/iv_grid2"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/padding_40"
        android:layout_height="@dimen/padding_40" />

    <ImageView
        android:id="@+id/iv_del"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_alignParentRight="true"
        android:src="@drawable/del2"
        android:layout_width="@dimen/padding_20"
        android:layout_height="@dimen/padding_20"/>

</RelativeLayout>