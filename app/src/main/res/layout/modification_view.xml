<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="@dimen/padding_24"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_modification"
            android:textSize="@dimen/padding_20"
            android:textColor="@color/color_5398F7"
            android:gravity="center"
            android:text="修改/删除"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ListView
            android:layout_above="@id/ll_modification"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_below="@id/tv_modification"
            android:id="@+id/lv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="@dimen/padding_100"
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_modification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:text="取消"
                android:background="@drawable/shape_text"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"/>

            <TextView
                android:id="@+id/tv_save"
                android:layout_marginLeft="@dimen/padding_60"
                android:textColor="@color/color_5398F7"
                android:gravity="center"
                android:text="保存"
                android:background="@drawable/shape_text"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"/>



        </LinearLayout>


    </RelativeLayout>




</LinearLayout>