<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="@dimen/padding_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/text_font_20"
            android:textColor="@color/color_5398F7"
            android:text="请输入用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:paddingLeft="@dimen/padding_16"
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/shape_ed"
            android:layout_width="@dimen/padding_300"
            android:layout_height="@dimen/padding_40"/>

        <LinearLayout
            android:layout_marginTop="@dimen/padding_10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40">

            <TextView
                android:id="@+id/tv_del"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:textColor="@color/colorAccent"
                android:text="取消"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"/>

            <TextView
                android:layout_marginLeft="@dimen/padding_40"
                android:id="@+id/tv_save"
                android:gravity="center"
                android:background="@drawable/shape_text"
                android:textColor="@color/color_5398F7"
                android:text="确定"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>