<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="@dimen/padding_18"
        android:gravity="center"
        android:text="修改标题"
        android:textColor="@color/color_FFFFFF"
        android:background="@color/color_5398F7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_40"/>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_16"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_text"
            android:layout_width="@dimen/padding_300"
            android:layout_height="@dimen/padding_36"
            android:background="@drawable/shape_ed"
            android:paddingLeft="@dimen/padding_10"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_font_12" />

        <LinearLayout
            android:layout_marginTop="@dimen/padding_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_40"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_36"
                android:layout_marginLeft="@dimen/padding_60"
                android:background="@drawable/shape_text"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/color_5398F7" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>