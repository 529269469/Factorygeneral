<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="@dimen/padding_16"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/padding_20" />

        <EditText
            android:id="@+id/et_modify"
            android:layout_width="@dimen/padding_300"
            android:layout_height="@dimen/padding_40"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/shape_ed" />

        <TextView
            android:id="@+id/tv_modify_save"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_40"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@drawable/shape_lv"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/color_FFFFFF" />
    </LinearLayout>
</LinearLayout>